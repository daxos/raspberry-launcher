' Gambas class file


Private $hProcess As Process
Private $bQuit As Boolean
Private $sPath As String
Private $bShow As Boolean


Public Sub Form_Open()
   
   Print "Wid = "; Hex$(dwgMoviePlayer.id)
  dwgMoviePlayer.show
  Me.Center
  musicaimg.SetFocus
  
 ' 552 600


End

Public Sub Form_Close()
  
StopMovie

Me.Close
  
End

Public Sub btnPlay_Click()

  If $hProcess Then
    Print #$hProcess, " ";
    btnPlay.hide
    btnPause.show
    'PRINT "CONTINUE"
    MovieBox1.Show
    MovieBox1.Playing = True
    Return
  Endif



  With dwgMoviePlayer

    .Show
    .Enabled = False
  '  '.Mouse = Mouse.Default
  '  Form_Resize
  '  '.Enabled = FALSE
  End With

  $bShow = True

  $hProcess = Exec ["mplayer", "-wid", CStr(dwgMoviePlayer.Handle), Conv$($sPath, Desktop.Charset, System.Charset)] For Read Write As "Process"

  btnPlay.hide
  btnPause.show
  'dwgMoviePlayer.Hide
  'timShow.Enabled = True

End


Public Sub btnStop_MouseDown()

  If Not $hProcess Then Return
  If $bQuit Then
    $hProcess.Kill
  Else
    Print #$hProcess, "q";
    $bQuit = True
  Endif

End

Public Sub Process_Read()
  
  Dim sData As String
  
  sData = Read #Last, -255
  
End


Public Sub Process_Kill()

  $hProcess = Null
  timShow.Enabled = False
  $bQuit = False
  $bShow = False
  btnPause.hide
  btnPlay.show
  dwgMoviePlayer.Hide

  'PRINT "STOP"

End

Public Sub timShow_Timer()

  dwgMoviePlayer.Resize(1, 1)
  dwgMoviePlayer.Show
  
  timShow.Enabled = False

End



Public Sub musicaimg_MouseDown()

Dialog.Path = $sPath
  If Dialog.OpenFile() Then Return
  $sPath = Dialog.Path
  btnPlay_click
btnnext.Show
before.Show
'progress.Show

End

Public Sub Form_Menu()
'menuvideo.Popup

End

Public Sub cerrar_Click()
  
  Me.hide
  
  
End



Public Sub btnnext_Click()

  If $hProcess Then
    Print #$hProcess, ">";
 
  Endif

End

Public Sub before_Click()

Print #$hProcess, "<";

End

Public Sub aumentar_Click()

  Print #$hProcess, "*"; 

End

Public Sub disminuir_Click()

 Print #$hProcess, "/";

End

Private Sub StopMovie()

  If Not $hProcess Then Return

  $hProcess.Kill
  'While $hProcess
  '  Wait
  'Wend

End



Public Sub FileView1_DblClick()

  StopMovie
  
  Wait 0.5
  $sPath = FileView1.Dir & "/" & FileView1.Current
  btnPlay_click
  musicaimg.Hide
  MovieBox1.Show
  MovieBox1.Playing = True

End

Public Sub btnpause_Click()

If Not $hProcess Then Return
  Print #$hProcess, " ";
  '$hProcess.Send(" ") '("pause\n")
  btnPlay.show
  btnPause.hide
 
    MovieBox1.Playing = False

End

